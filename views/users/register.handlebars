<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card card-body">
            <div class="mx-auto">
                <img src="/img/logo.png">
            </div>
            <h3 class="text-center">Account Register</h3>
            <form method="post" action="/users/register">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input name="name" type="text" class="form-control" value="{{name}}" required>
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input name="email" type="email" class="form-control" value="{{email}}" required>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input name="password" type="password" class="form-control" value="{{password}}" required>
                </div>
                <div class="form-group">
                    <label for="password2">Confirm Password</label>
                    <input name="password2" type="password" class="form-control" value="{{password2}}" required>
                </div>
                <button class="btn btn-primary" type="submit">Submit</button>
            </form>
        </div>
    </div>
</div>